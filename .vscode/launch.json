{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++: Current File",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceRoot}/bin/cpp/${fileBasenameNoExtension}",
      "args": [],
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "C++ build"
    },
    {
      "type": "java",
      "name": "Java",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "javascript",
      "program": "${file}",
      "cwd": "${workspaceRoot}/javascript",
      "env": {}
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
  ]
}